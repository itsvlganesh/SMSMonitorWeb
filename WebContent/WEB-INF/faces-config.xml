<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

    <component>
        <component-type>org.primefaces.component.UltimaMenu</component-type>
        <component-class>org.primefaces.ultima.component.menu.UltimaMenu</component-class>
    </component>
    
    <render-kit>
        <renderer>
            <component-family>org.primefaces.component</component-family>
            <renderer-type>org.primefaces.component.UltimaMenuRenderer</renderer-type>
            <renderer-class>org.primefaces.ultima.component.menu.UltimaMenuRenderer</renderer-class>
        </renderer>
    </render-kit>
	<application>
		<view-handler>com.amg.servicemgmt.bundle.MyViewHandler</view-handler>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>ar</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>com.amg.servicemgmt.messages.amglabel</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>
<lifecycle>
    <phase-listener id="nocache">com.amg.servicemgmt.util.CaheControlPhaseListener</phase-listener>
</lifecycle>
	<navigation-rule>

		<from-view-id>/services/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/services/dailyreport.xhtml</to-view-id>
		</navigation-case>

		<!-- <from-outcome>error</from-outcome> -->
		<!-- <to-view-id>report/login.xhtml</to-view-id> -->
		<!-- </navigation-case> -->
		<!-- <navigation-case> -->
		<!-- <from-outcome>failure</from-outcome> -->
		<!-- <to-view-id>report/login.xhtml</to-view-id> -->
		<!-- </navigation-case> -->

	</navigation-rule>

	<navigation-rule>
		<from-view-id>/services/dailyreport.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>home</from-outcome>
			<to-view-id>/services/welcome.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
